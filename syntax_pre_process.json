/* The tricks I know to make the syntax highlighting work (in Monokai
 * Extended):
 *   'string' - (light) yellow
 *   'variable.parameter' - orange, italic
 *   'keyword' - red
 *   'markup.bold' - red, bold
 *   'markup.italic' - red, italic
 *   'markup.heading' - orange
 *   'constant.(other|numeric|character|...)' - purple
 *   'support.function' (or 'meta.diff'?) - blue
 *   'entity' - green
 *   'comment' - grey(ed out)
 *   'support.entity' - green, italic
 */
{
  // general TeX stuff
  "TEX_DEF":          "support.function.tex.context",
  "TEX_DEF_PREFIX":   "constant.other.tex.context",
  "TEX_PARAMETER":    "variable.parameter.tex.context",
  "ACTIVE_CHARACTER": "constant.other.active-character.tex.context",
  "CONTROL_WORD":     "support.function.control-word.tex.context",
  "CONTROL_SYMBOL":   "constant.other.control-symbol.tex.context",
  "TEX_GROUP":        "group.tex.context",
  // ConTeXt tables
  "TABLE_LIST":      "table.list.tex.context",
  "TABLE_ALIGNMENT": "keyword.tex.context",
  "TABLE_FONT":      "entity.tex.context",
  "TABLE_MATH":      "string.tex.context",
  "TABLE_NUM_ALIGN": "constant.other.tex.context",
  "TABLE_SPACE":     "space.tex.context",
  "TABLE_WIDTH":     "constant.other.tex.context",
  // TikZ
  "TIKZ_GROUP":         "group.tikz.tex.context",
  "TIKZ_LIST":          "list.tikz.tex.context",
  "TIKZ_SCOPE":         "tikz.tex.context",
  "TIKZ_CALC_TOGGLE":   "string.calc-toggle.tikz.tex.context",
  "TIKZ_MATH_FUNCTION": "support.function.math-function.tikz.tex.context",
  "TIKZ_MATH_OPERATOR": "keyword.math-operator.tikz.tex.context",
  "TIKZ_SEMI_COLON":    "semi-colon.tikz.tex.context",
  // Math mode
  "MATH_SCOPE":  "math.tex.context",
  "MATH_GROUP":  "group.math.tex.context",
  "MATH_TEXT":   "string.math.tex.context",
  "MATH_TOGGLE": "string.math-toggle.math.tex.context",
  // Lua
  "LUA_GROUP":            "group.lua.tex.context",
  "LUA_CONTEXT_FUNCTION": "support.function.lua.tex.context",
  // (ConTeXt style) alignment
  "NEW_COLUMN": "keyword.tex.context",
  "NEW_LINE":   "keyword.tex.context",
  "NEW_ROW":    "keyword.tex.context",
  // common ConTeXt-interface style commands
  "DEFINE":            "support.function.tex.context",
  "DEFINE_NAME":       "support.function.tex.context",
  "PLACE":             "support.function.tex.context",
  "PLACE_NAME":        "support.function.tex.context",
  "SETUP":             "support.function.tex.context",
  "SETUP_NAME":        "support.function.tex.context",
  "START_ENVIRONMENT": "support.function.start.tex.context",
  "STOP_ENVIRONMENT":  "support.function.stop.tex.context",
  "ENVIRONMENT_NAME":  "variable.parameter.environment-name.tex.context",
  "USE_MODULE":        "keyword.tex.context",
  "MODULE_NAME":       "support.class.module.tex.context",
  // misc
  "LIST":    "list.tex.context",
  "ITEM":    "keyword.tex.context",
  "KEYWORD": "keyword.tex.context",
  "COMMENT": "comment.tex.context",
  "KEY":     "variable.parameter.key.tex.context",
  "EQUALS":  "keyword.equals.tex.context",
  "COLON":   "colon.tex.context",
  "NUMBER":  "constant.numeric.tex.context",
  // log
  "LOG_ERROR":        "invalid.illegal.error.log.context",
  "LOG_CATEGORY":     "keyword.category.log.context",
  "LOG_CATEGORY_SEP": "markup.heading.log.context",
  "LOG_KEY":          "variable.parameter.key.log.context",
  "LOG_EQUALS":       "keyword.equals.log.context",
  "LOG_STRING":       "string.log.context",
  "LOG_NUMBER":       "constant.numeric.log.context"
}
