  ConTeXt.headings:
    - include: ConTeXt.headings.inline
    - include: ConTeXt.headings.block

  ConTeXt.headings.inline:
    - match: '(\\)part\b'
      captures: {'0': support.function.general.context, '1': punctuation.definition.backslash.context}
      push: [ConTeXt.headings.part.group*/, generic.list*/]
    - match: '(\\)(chapter|title)\b'
      captures: {'0': support.function.general.context, '1': punctuation.definition.backslash.context}
      push: [ConTeXt.headings.chapter.group*/, generic.list*/]
    - match: '(\\)(section|subject)\b'
      captures: {'0': support.function.general.context, '1': punctuation.definition.backslash.context}
      push: [ConTeXt.headings.section.group*/, generic.list*/]
    - match: '(\\)sub(section|subject)\b'
      captures: {'0': support.function.general.context, '1': punctuation.definition.backslash.context}
      push: [ConTeXt.headings.subsection.group*/, generic.list*/]
    - match: '(\\)subsub(section|subject)\b'
      captures: {'0': support.function.general.context, '1': punctuation.definition.backslash.context}
      push: [ConTeXt.headings.subsubsection.group*/, generic.list*/]
