    - match: '([[:alpha:]\.\-:_]+)(=)'
      captures:
        '1': variable.parameter.context
        '2': keyword.operator.assignment.context
      push:
        - meta_content_scope: meta.other.value.context
        - match: '(?=[\],])'
          pop: true
        - include: main
        - include: generic.real-or-integer.dimension
        - include: generic.real-or-integer
    - match: '='
      scope: keyword.operator.assignment.context

  generic.group.assignments:
    - match: '\b(reference)(=)'
      captures:
        '1': variable.parameter.context
        '2': keyword.operator.assignment.context
      push:
        - meta_content_scope: meta.other.value.context meta.other.reference.context
        - match: '(?=[\},])'
          pop: true
        - include: main
    - match: '([[:alpha:]\.\-:_]+)(=)'
      captures:
        '1': variable.parameter.context
        '2': keyword.operator.assignment.context
      push:
        - meta_content_scope: meta.other.value.context
        - match: '(?=[\},])'
          pop: true
        - include: main
        - include: generic.real-or-integer.dimension
        - include: generic.real-or-integer
    - match: '='
      scope: keyword.operator.assignment.context
